<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>My Brute</display-name>

    <servlet>
        <servlet-name>signUp</servlet-name>
        <servlet-class>edu.db.myBrute.controller.SignUpCtrl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>edu.db.myBrute.controller.LoginCtrl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>edu.db.myBrute.controller.HomeCtrl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>opponents</servlet-name>
        <servlet-class>edu.db.myBrute.controller.OpponentsCtrl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>playGame</servlet-name>
        <servlet-class>edu.db.myBrute.controller.PlayGameCtrl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>result</servlet-name>
        <servlet-class>edu.db.myBrute.controller.ResultCtrl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>edu.db.myBrute.controller.LogoutCtrl</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>signUp</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>opponents</servlet-name>
        <url-pattern>/opponents</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>playGame</servlet-name>
        <url-pattern>/playGame</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>result</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>